                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="@+id/bt_showhideanexos"
                        app:layout_constraintStart_toEndOf="@+id/tvmarginstart"
                        app:layout_constraintTop_toTopOf="@+id/bt_showhideanexos"
