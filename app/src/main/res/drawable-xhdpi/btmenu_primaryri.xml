<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:topLeftRadius="10dp" android:bottomLeftRadius="10dp"/>
        <stroke android:width="0.5dip" android:color="@color/btnRegister" />
        <gradient android:angle="-90" android:startColor="#a57ed6" android:endColor="#a57ed6"  />
    </shape>
</item>
<item android:state_focused="true">
<shape android:shape="rectangle"  >
    <corners android:topLeftRadius="10dp" android:bottomLeftRadius="10dp"/>
    <stroke android:width="0.5dip" android:color="@color/btnRegister" />
    <solid android:color="#682eee"/>
</shape>
</item>
<item >
<shape android:shape="rectangle"  >
    <text android:textColor="@color/blanco_transparente"/>
    <corners android:topLeftRadius="10dp" android:bottomLeftRadius="10dp"/>
    <stroke android:width="0.5dip" android:color="@color/btnRegister" />
    <gradient android:angle="90" android:startColor="@color/colorPrimary" android:endColor="@color/time_one" />
</shape>
</item>
</selector>